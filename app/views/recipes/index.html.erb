<h1 class='index'>Listing recipes</h1>

<table>
  <tr>
    <th class='index'>Name</th>
    <th class='index'>Author</th>
    <th class='index'>Ingredients</th>
    <th class='index'>Preparation</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<%@recipes.each do |recipe| %>
  <tr>
    <td><%= recipe.name %></td>
    <td><%= recipe.author %></td>
    <td><%= recipe.ingredients %></td>
    <td><%= recipe.preparation %></td>
    <td><%= link_to 'Show', recipe %></td>
    <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
    <td><%= link_to 'Destroy', recipe, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

